<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="android:navigationBarColor">@color/blue</item>
        <item name="badgeStyle">@style/CustomBadge</item>

    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/white</item>
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomBadge" parent="@style/Widget.MaterialComponents.Badge">
        <item name="backgroundColor">@color/cream</item>
    </style>

    <style name="CustomDialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimationDropDown</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="CustomDialogUp">
        <item name="android:windowAnimationStyle">@style/DialogAnimationUp</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="DialogAnimationDropDown">
        <item name="android:windowEnterAnimation">@anim/dialog_drop</item>
        <item name="android:windowExitAnimation">@anim/dialog_up</item>
    </style>

    <style name="DialogAnimationUp">
        <item name="android:windowEnterAnimation">@anim/dialog_up_s</item>
        <item name="android:windowExitAnimation">@anim/dialog_drop_s</item>
    </style>

</resources>



